{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "lib": ["esnext"],
    "baseUrl": "src/",
    "typeRoots": ["@types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
